{
  "manifest_version": 3,
  "name": "VeloDrive",
  "version": "0.3.0",
  "description": "VeloDrive imports ZWO workouts from sites like WhatsOnZwift or TrainerDay and runs them in the browser with smart-trainer ERG/FTMS support.",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_title": "Download ZWO",
    "default_icon": "icons/icon128.png"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": [
    "storage",
    "scripting",
    "activeTab"
  ],

  "host_permissions": [
    "https://www.trainerroad.com/*",
    "https://app.trainerday.com/*",
    "https://app.api.trainerday.com/*",
    "https://whatsonzwift.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://www.trainerroad.com/*",
        "https://app.trainerday.com/*",
        "https://whatsonzwift.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "options_ui": {
    "page": "workout.html",
    "open_in_tab": true
  },

  "web_accessible_resources": [
    {
      "resources": [
        "workout.html",
        "workout.js",
        "workout-builder.js",
        "ble-manager.js",
        "beeper.js",
        "storage.js",
        "settings.js",
        "workout-metrics.js",
        "workout-chart.js",
        "workout-engine.js",
        "workout-picker.js",
        "settings.css",
        "workout-base.css",
        "workout-picker.css"
      ],
      "matches": ["chrome-extension://*/*"]
    }
  ]
}

