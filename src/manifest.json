{
  "manifest_version": 3,
  "name": "ZWO Downloader",
  "description": "Download any TrainerRoad or TrainerDay workout as a ZWO file, with ramps, intervals, metadata, and category.",
  "version": "1.3.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Download ZWO",
    "default_icon": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://www.trainerroad.com/*",
    "https://app.trainerday.com/*",
    "https://app.api.trainerday.com/*",
    "https://whatsonzwift.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.trainerroad.com/app/cycling/workouts/add/*",
        "https://app.trainerday.com/workouts/*",
        "https://whatsonzwift.com/workouts/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
